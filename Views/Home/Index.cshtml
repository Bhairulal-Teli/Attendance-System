@model IEnumerable<AttendanceSystem118.Models.Class>

@{
    ViewData["Title"] = "Home";
}

<div class="page-header">
    <h1>All Classes</h1>
    <a asp-controller="Class" asp-action="Create" class="btn btn-primary">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Add New Class
    </a>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
        </svg>
        <h2>No Classes Yet</h2>
        <p>Get started by creating your first class</p>
        <a asp-controller="Class" asp-action="Create" class="btn btn-primary">Create Class</a>
    </div>
}
else
{
    <div class="class-grid">
        @foreach (var item in Model)
        {
            <div class="class-card">
                <div class="class-card-header">
                    <h3>@item.Name</h3>
                    <form asp-controller="Class" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this class?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-icon btn-danger" title="Delete">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                        </button>
                    </form>
                </div>
                <div class="class-card-body">
                    <div class="class-info">
                        <span class="badge">@item.Subject</span>
                        @if (!string.IsNullOrEmpty(item.Section))
                        {
                            <span class="badge badge-secondary">Section @item.Section</span>
                        }
                    </div>
                    <div class="class-stats">
                        <div class="stat">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                            <span>@item.Students.Count Students</span>
                        </div>
                        <div class="stat">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            <span>@item.CreatedDate.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
                <div class="class-card-footer">
                    <a asp-controller="Class" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">View Details</a>
                </div>
            </div>
        }
    </div>
}