@model AttendanceSystem118.Models.ViewModels.AttendanceViewModel

@{
    ViewData["Title"] = "Mark Attendance";
    ViewBag.ClassId = Model.ClassId;
}

<div class="form-container">
    <div class="form-header">
        <h1>Mark Attendance</h1>
        <p>@Model.ClassName</p>
    </div>
    
    <form asp-action="MarkAttendance" method="post" class="form">
        <input type="hidden" asp-for="ClassId" />
        <input type="hidden" asp-for="ClassName" />
        
        <div class="form-group">
            <label asp-for="Date">Date</label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        
        @if (!Model.Students.Any())
        {
            <div class="empty-state">
                <p>No students in this class. Please add students first.</p>
                <a asp-controller="Student" asp-action="Create" asp-route-classId="@Model.ClassId" class="btn btn-primary">Add Student</a>
            </div>
        }
        else
        {
            <div class="attendance-list">
                <div class="attendance-list-header">
                    <h3>Students</h3>
                    <div class="bulk-actions">
                        <button type="button" class="btn btn-sm btn-success" onclick="markAllPresent()">Mark All Present</button>
                        <button type="button" class="btn btn-sm btn-secondary" onclick="markAllAbsent()">Mark All Absent</button>
                    </div>
                </div>
                
                @for (int i = 0; i < Model.Students.Count; i++)
                {
                    <div class="attendance-item">
                        <input type="hidden" asp-for="Students[i].StudentId" />
                        <input type="hidden" asp-for="Students[i].StudentName" />
                        <input type="hidden" asp-for="Students[i].EnrollmentNumber" />
                        
                        <div class="student-info">
                            <div class="avatar">@Model.Students[i].StudentName.Substring(0, 1).ToUpper()</div>
                            <div>
                                <div class="student-name">@Model.Students[i].StudentName</div>
                                <div class="student-enrollment">@Model.Students[i].EnrollmentNumber</div>
                            </div>
                        </div>
                        
                        <label class="checkbox-container">
                            <input type="checkbox" asp-for="Students[i].IsPresent" checked="@Model.Students[i].IsPresent" />
                            <span class="checkmark"></span>
                            <span class="checkbox-label">Present</span>
                        </label>
                    </div>
                }
            </div>
            
            <div class="form-actions">
                <a asp-controller="Class" asp-action="Details" asp-route-id="@Model.ClassId" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Attendance</button>
            </div>
        }
    </form>
</div>

@section Scripts {
    <script>
        function markAllPresent() {
            document.querySelectorAll('input[type="checkbox"][name*="IsPresent"]').forEach(cb => cb.checked = true);
        }
        
        function markAllAbsent() {
            document.querySelectorAll('input[type="checkbox"][name*="IsPresent"]').forEach(cb => cb.checked = false);
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}