@model AttendanceSystem118.Models.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Add Student";
    ViewBag.ClassId = Model?.ClassId ?? ViewBag.ClassId;
}

<div class="form-container">
    <div class="form-header">
        <h1>Add New Student</h1>
        <p>Add a student to @ViewBag.ClassName</p>
    </div>
    
    <form asp-action="Create" method="post" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
        
        <input type="hidden" asp-for="ClassId" value="@ViewBag.ClassId" />
        
        <div class="form-group">
            <label asp-for="Name">Student Name *</label>
            <input asp-for="Name" class="form-control" placeholder="e.g., John Doe" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="EnrollmentNumber">Enrollment Number *</label>
            <input asp-for="EnrollmentNumber" class="form-control" placeholder="e.g., 2024CS001" />
            <span asp-validation-for="EnrollmentNumber" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Email">Email (Optional)</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="e.g., student@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Phone">Phone (Optional)</label>
            <input asp-for="Phone" type="tel" class="form-control" placeholder="e.g., +91 9876543210" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        
        <div class="form-actions">
            <a asp-controller="Class" asp-action="Details" asp-route-id="@ViewBag.ClassId" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Add Student</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}